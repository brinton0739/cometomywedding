{{#unless this.access.restricted}}
<li class="py-5{{#if this.access.admin}} guest{{/if}}"{{#if this.access.admin}}data-guest_id="{{this.id}}"{{/if}}>
    <div class="relative focus-within:ring-2 focus-within:ring-teal-500">
        <h3 class="text-sm font-semibold text-gray-800">
            <a href="#" class="hover:none focus:outline-none">
                <p class="mt-1 text-sm text-gray-600 line-clamp-2">
                    {{this.user.first_name}} {{this.user.last_name}} {{#if this.access.admin}}<button data-guest_id="{{this.id}}" class="delete text-white bg-red-600 rounded px-2 hover:bg-yellow-600">Uninvite</button>{{/if}}</p>
                {{#if this.access.admin}}<p class="mt-1 text-sm text-gray-600 line-clamp-2">
                    {{this.user.email}}</p>{{/if}}
            </a>
        </h3>
    </div>
</li>
{{/unless}}